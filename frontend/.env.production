# Production Environment Configuration
# This file is loaded automatically in production mode

# Application Information
VITE_APP_NAME=Personal AI Assistant
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Your intelligent personal assistant

# API Configuration - Production Server
# These should be overridden in deployment with actual production URLs
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_WS_BASE_URL=wss://api.yourdomain.com
VITE_API_TIMEOUT=60000
VITE_API_MAX_RETRIES=3
VITE_API_RETRY_DELAY=2000

# WebSocket Configuration
VITE_WS_RECONNECT_ATTEMPTS=10
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_HEARTBEAT_INTERVAL=30000
VITE_WS_MAX_MESSAGE_SIZE=1048576

# Voice Features
VITE_FEATURE_VOICE=true
VITE_VOICE_MAX_FILE_SIZE=10485760
VITE_DEFAULT_VOICE=nova
VITE_DEFAULT_VOICE_SPEED=1.0
VITE_VOICE_CHUNK_SIZE=1024

# File Upload
VITE_MAX_FILE_SIZE=52428800
VITE_UPLOAD_CHUNK_SIZE=1048576

# Pagination
VITE_DEFAULT_PAGE_SIZE=50
VITE_MAX_PAGE_SIZE=100

# Feature Flags
VITE_FEATURE_PLUGINS=true
VITE_FEATURE_KNOWLEDGE_BASE=true
VITE_FEATURE_TASKS=true
VITE_FEATURE_BRIEFING=true
VITE_FEATURE_ANALYTICS=true

# Production Settings
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_CONSOLE_LOGS=false
VITE_MOCK_API=false
VITE_HOT_RELOAD=false
VITE_SOURCE_MAPS=false

# Theme Configuration
VITE_DEFAULT_THEME=system
VITE_ENABLE_THEME_PERSISTENCE=true

# Performance (optimized for production)
VITE_ENABLE_PWA=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_STATIC_ASSETS=true
VITE_PRELOAD_CRITICAL_ASSETS=true
VITE_ENABLE_COMPRESSION=true

# Security (strict for production)
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
VITE_ENABLE_XSS_PROTECTION=true
VITE_SECURE_COOKIES=true

# Analytics (configure with actual values in deployment)
# VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# VITE_MIXPANEL_TOKEN=your_mixpanel_token

# Error Reporting (configure with actual values in deployment)
# VITE_SENTRY_DSN=https://your-sentry-dsn
# VITE_SENTRY_ENVIRONMENT=production

# Performance Monitoring
# VITE_HOTJAR_ID=your_hotjar_id

# Production debugging (disabled)
VITE_DEBUG_API_CALLS=false
VITE_DEBUG_WEBSOCKET=false
VITE_DEBUG_VOICE=false
VITE_SHOW_PERFORMANCE_METRICS=false

# Build optimization
VITE_BUILD_ANALYZE=false
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true