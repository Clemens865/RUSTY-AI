# Development Environment Configuration
# This file is loaded automatically in development mode

# Application Information
VITE_APP_NAME=Personal AI Assistant (Dev)
VITE_APP_VERSION=1.0.0-dev
VITE_APP_DESCRIPTION=Development build of Personal AI Assistant

# API Configuration - Development Server
VITE_API_BASE_URL=http://localhost:8080
VITE_WS_BASE_URL=ws://localhost:8080
VITE_API_TIMEOUT=30000
VITE_API_MAX_RETRIES=3
VITE_API_RETRY_DELAY=1000

# WebSocket Configuration
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=3000
VITE_WS_HEARTBEAT_INTERVAL=30000
VITE_WS_MAX_MESSAGE_SIZE=1048576

# Voice Features (enabled for development)
VITE_FEATURE_VOICE=true
VITE_VOICE_MAX_FILE_SIZE=10485760
VITE_DEFAULT_VOICE=nova
VITE_DEFAULT_VOICE_SPEED=1.0
VITE_VOICE_CHUNK_SIZE=1024

# File Upload
VITE_MAX_FILE_SIZE=52428800
VITE_UPLOAD_CHUNK_SIZE=1048576

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=50

# Feature Flags (all enabled for development)
VITE_FEATURE_PLUGINS=true
VITE_FEATURE_KNOWLEDGE_BASE=true
VITE_FEATURE_TASKS=true
VITE_FEATURE_BRIEFING=true
VITE_FEATURE_ANALYTICS=false

# Development Settings
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_CONSOLE_LOGS=true
VITE_MOCK_API=false
VITE_HOT_RELOAD=true
VITE_SOURCE_MAPS=true

# Theme Configuration
VITE_DEFAULT_THEME=system
VITE_ENABLE_THEME_PERSISTENCE=true

# Performance (relaxed for development)
VITE_ENABLE_PWA=false
VITE_ENABLE_SERVICE_WORKER=false
VITE_CACHE_STATIC_ASSETS=false

# Security (relaxed for development)
VITE_ENABLE_CSP=false
VITE_ENABLE_HSTS=false
VITE_ENABLE_XSS_PROTECTION=true

# Development-specific debugging
VITE_DEBUG_API_CALLS=true
VITE_DEBUG_WEBSOCKET=true
VITE_DEBUG_VOICE=true
VITE_SHOW_PERFORMANCE_METRICS=true