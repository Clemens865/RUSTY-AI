# Personal AI Assistant Frontend Environment Variables
# Copy this file to .env.local and configure for your environment

# Application Information
VITE_APP_NAME=Personal AI Assistant
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Your intelligent personal assistant

# API Configuration
VITE_API_BASE_URL=http://localhost:8080
VITE_WS_BASE_URL=ws://localhost:8080
VITE_API_TIMEOUT=30000
VITE_API_MAX_RETRIES=3
VITE_API_RETRY_DELAY=1000

# WebSocket Configuration
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=3000
VITE_WS_HEARTBEAT_INTERVAL=30000
VITE_WS_MAX_MESSAGE_SIZE=1048576

# Voice Features
VITE_FEATURE_VOICE=true
VITE_VOICE_MAX_FILE_SIZE=10485760
VITE_DEFAULT_VOICE=nova
VITE_DEFAULT_VOICE_SPEED=1.0
VITE_VOICE_CHUNK_SIZE=1024

# File Upload
VITE_MAX_FILE_SIZE=52428800
VITE_UPLOAD_CHUNK_SIZE=1048576

# Pagination
VITE_DEFAULT_PAGE_SIZE=50
VITE_MAX_PAGE_SIZE=100

# Feature Flags
VITE_FEATURE_PLUGINS=true
VITE_FEATURE_KNOWLEDGE_BASE=true
VITE_FEATURE_TASKS=true
VITE_FEATURE_BRIEFING=true
VITE_FEATURE_ANALYTICS=false

# Development Settings
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_CONSOLE_LOGS=true
VITE_MOCK_API=false

# Analytics (if enabled)
# VITE_GOOGLE_ANALYTICS_ID=
# VITE_MIXPANEL_TOKEN=

# External Services (optional)
# VITE_SENTRY_DSN=
# VITE_HOTJAR_ID=

# Theme Configuration
VITE_DEFAULT_THEME=system
VITE_ENABLE_THEME_PERSISTENCE=true

# Performance
VITE_ENABLE_PWA=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_STATIC_ASSETS=true

# Security
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
VITE_ENABLE_XSS_PROTECTION=true