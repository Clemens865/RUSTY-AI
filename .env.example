# Personal AI Assistant Environment Configuration
# Copy this file to .env and update with your actual values

# =================================
# Server Configuration
# =================================
HOST=localhost
PORT=8080
ENVIRONMENT=development

# =================================
# Database Configuration
# =================================
DATABASE_URL=sqlite:./data/rusty_ai.db
DATABASE_MAX_CONNECTIONS=20
DATABASE_MIN_CONNECTIONS=5
DATABASE_CONNECT_TIMEOUT_SECONDS=30
DATABASE_MAX_LIFETIME_SECONDS=3600
DATABASE_IDLE_TIMEOUT_SECONDS=600
DATABASE_AUTO_MIGRATE=true

# PostgreSQL alternative (comment out SQLite above if using PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/rusty_ai
# DATABASE_SSL_MODE=prefer

# =================================
# Security & Authentication
# =================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION_HOURS=24
BCRYPT_COST=12
SESSION_SECRET=your-session-secret-key-change-this-in-production
SESSION_TIMEOUT_HOURS=168

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOW_CREDENTIALS=true

# =================================
# AI Services Configuration
# =================================
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4096

# Google AI Configuration
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
GOOGLE_AI_MODEL=gemini-pro

# =================================
# Vector Database (Qdrant)
# =================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your-qdrant-api-key-if-using-cloud
QDRANT_COLLECTION_NAME=rusty_ai_embeddings
QDRANT_VECTOR_SIZE=1536

# =================================
# Redis Configuration (for caching/sessions)
# =================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password-if-set
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10
REDIS_CONNECT_TIMEOUT_SECONDS=5

# =================================
# File Storage Configuration
# =================================
STORAGE_TYPE=local
STORAGE_PATH=./data/uploads
STORAGE_MAX_FILE_SIZE_MB=100

# S3 Configuration (if using S3 storage)
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# =================================
# Plugin System Configuration
# =================================
PLUGINS_DIRECTORY=./plugins
PLUGINS_MAX_MEMORY_MB=64
PLUGINS_MAX_EXECUTION_TIME_SECONDS=30
PLUGINS_MAX_CPU_TIME_SECONDS=10
PLUGINS_MAX_FUEL=1000000
PLUGINS_ENABLE_SECURITY_SANDBOX=true
PLUGINS_AUTO_LOAD=true

# =================================
# Voice Processing Configuration
# =================================
# Speech-to-Text Service
STT_SERVICE=whisper
WHISPER_MODEL=base
WHISPER_LANGUAGE=en

# Text-to-Speech Service
TTS_SERVICE=azure
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastus
AZURE_VOICE_NAME=en-US-AriaNeural

# Alternative TTS Services
# ELEVENLABS_API_KEY=your-elevenlabs-api-key
# ELEVENLABS_VOICE_ID=your-voice-id

# =================================
# Email Configuration
# =================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=Personal AI Assistant
SMTP_FROM_EMAIL=noreply@yourapp.com
SMTP_USE_TLS=true

# =================================
# Logging Configuration
# =================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/rusty_ai.log
LOG_MAX_FILE_SIZE_MB=100
LOG_MAX_FILES=10
LOG_COMPRESS_ROTATED=true

# Sentry for error tracking (optional)
# SENTRY_DSN=your-sentry-dsn-here
# SENTRY_ENVIRONMENT=development

# =================================
# Monitoring & Metrics
# =================================
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL_SECONDS=30

# Prometheus integration
PROMETHEUS_ENABLED=false
PROMETHEUS_NAMESPACE=rusty_ai

# =================================
# Background Jobs & Scheduling
# =================================
SCHEDULER_ENABLED=true
SCHEDULER_MAX_WORKERS=5
SCHEDULER_CLEANUP_INTERVAL_HOURS=24

# =================================
# Rate Limiting
# =================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# API Rate Limits
API_RATE_LIMIT_REQUESTS_PER_HOUR=1000
API_RATE_LIMIT_CONCURRENT_REQUESTS=10

# =================================
# Feature Flags
# =================================
FEATURE_VOICE_ENABLED=true
FEATURE_PLUGINS_ENABLED=true
FEATURE_KNOWLEDGE_GRAPH_ENABLED=true
FEATURE_BRIEFINGS_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_COLLABORATION_ENABLED=false

# =================================
# Development & Testing
# =================================
DEBUG=false
TEST_MODE=false
MOCK_AI_RESPONSES=false

# Database for testing (uses in-memory SQLite by default)
TEST_DATABASE_URL=sqlite::memory:

# =================================
# Production Optimization
# =================================
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
STATIC_FILE_CACHE_SECONDS=86400

# Connection pooling
MAX_CONCURRENT_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT_SECONDS=60
REQUEST_TIMEOUT_SECONDS=30

# =================================
# Backup Configuration
# =================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=./backups
BACKUP_COMPRESS=true

# =================================
# Integration APIs
# =================================
# Calendar Integration
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret

# Email Integration
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret

# Slack Integration
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Microsoft 365 Integration
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# =================================
# Webhook Configuration
# =================================
WEBHOOK_SECRET=your-webhook-secret-for-verification
WEBHOOK_TIMEOUT_SECONDS=10
WEBHOOK_MAX_RETRIES=3

# =================================
# Custom Configuration
# =================================
# Add your custom environment variables here
# CUSTOM_FEATURE_ENABLED=true
# CUSTOM_API_ENDPOINT=https://api.example.com
# CUSTOM_API_KEY=your-custom-api-key